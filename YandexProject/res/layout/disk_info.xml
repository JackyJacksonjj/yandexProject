<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clouds_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trashSize"
        android:minHeight="30dp"
        android:textSize="20dp"
        android:text="@string/trashSize"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trashSizeVolume"
        android:textColor="#ffffff"
        android:minHeight="30dp"
        android:textSize="20dp"
        android:minWidth="120dp"
        android:layout_below="@+id/trashSize"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/totalSpace"
        android:id="@+id/totalSpace"
        android:textColor="#ffffff"
        android:minHeight="30dp"
        android:textSize="20dp"
        android:layout_below="@+id/trashSizeVolume"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalSpaceVolume"
        android:textColor="#ffffff"
        android:minHeight="30dp"
        android:textSize="20dp"
        android:minWidth="120dp"
        android:layout_below="@+id/totalSpace"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/usedSpace"
        android:id="@+id/usedSpace"
        android:textColor="#ffffff"
        android:minHeight="30dp"
        android:textSize="20dp"
        android:layout_below="@+id/totalSpaceVolume"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usedSpaceVolume"
        android:textColor="#ffffff"
        android:minHeight="30dp"
        android:textSize="20dp"
        android:minWidth="120dp"
        android:layout_below="@+id/usedSpace"
        android:layout_alignParentLeft="true" />
</RelativeLayout>

